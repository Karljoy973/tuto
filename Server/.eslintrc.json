{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": ["error", { "endOfLine": "auto" }],
        "no-irregular-whitespace": ["error", { "skipStrings": true }]
    }
}
